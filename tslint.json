{
  "extends": "tslint:recommended",
  "rules": {
    "max-line-length": {
      "options": [120]
    },
    "new-parens": true,
    "semicolon": false,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "quotemark": false,
    "indent": false,
    "object-literal-sort-keys": false,
    "no-console": {
      "severity": "warning",
      "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
    }
  },
  "whitespace": {
    "severity": "warning"
  },
  "jsRules": {
    "max-line-length": {
      "options": [120]
    }
  }
}
